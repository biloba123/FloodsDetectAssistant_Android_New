<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/status_height"
        android:padding="@dimen/card_spacing"
        android:textColor="@color/text_color"
        android:background="@color/accent_white"
        android:text="请点击地图上的标识坐标"
        android:textSize="@dimen/sub_big_text"
        />

    <com.amap.api.maps.MapView
        android:id="@+id/map_report_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:id="@+id/btn_report_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:background="?colorPrimary"
        android:textColor="@color/accent_white"/>
</LinearLayout>