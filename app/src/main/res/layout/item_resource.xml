<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:paddingTop="@dimen/sub_big_spacing"
                android:paddingBottom="@dimen/sub_big_spacing"
                android:paddingEnd="@dimen/card_spacing"
                android:paddingStart="@dimen/card_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@mipmap/dot"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sub_small_spacing">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="@dimen/medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            tools:text="@string/app_name"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sub_small_spacing"
            android:textColor="@color/sub_text_color"
            android:textSize="@dimen/small_text"
            tools:text="@string/app_name"/>
    </LinearLayout>
</RelativeLayout>