<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="@dimen/card_elevation"
                                    android:layout_marginBottom="@dimen/sub_small_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_item"
        android:padding="@dimen/card_spacing">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="84dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/small_spacing">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/sub_medium_text"
                android:textColor="@color/sub_text_color"
                tools:text="@string/app_name"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textColor="@color/accent_white"
                tools:text="未审核"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_time"
                android:layout_marginTop="@dimen/small_spacing"
                tools:background="@drawable/bg_state_green"/>


            <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/text_color"
            tools:text="@string/app_name"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sub_medium_text"
            android:layout_marginRight="@dimen/small_spacing"
            android:layout_toLeftOf="@id/tv_state"
            android:textColor="@color/sub_text_color"
            tools:text="@string/app_name"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
